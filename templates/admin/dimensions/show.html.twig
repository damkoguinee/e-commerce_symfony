{% extends 'base.html.twig' %}

{% block title %}dimension{% endblock %}
{% block header %}{% endblock %}

{% block body %}
    <h3 class="text-center">Dimension {{dimension.valeurdimension}}</h3>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ dimension.id }}</td>
            </tr>
            <tr>
                <th>Dimension</th>
                <td>{{ dimension.valeurDimension }}</td>
            </tr>
        </tbody>
    </table>

    <div class="pb-4 d-flex justify-content-between">
        <a class="btn btn-secondary" href="{{ path('app_admin_dimensions_index') }}">Retour</a>

        <a class="btn btn-info" href="{{ path('app_admin_dimensions_edit', {'id': dimension.id}) }}"><i class="fa fa-edit"></i></a>

        {{ include('_common/_delete_form.html.twig') }}
    </div>
{% endblock %}
